#!/bin/sh -e

. $(dirname $0)/env

tail_neco_worker_once() {
  host="$1"
  chmod 600 ./dctest/dctest_key
  $GCLOUD compute scp --zone=${ZONE} ./dctest/dctest_key ./dctest/ssh_config cybozu@${INSTANCE_NAME}:
  $GCLOUD compute ssh --zone=${ZONE} cybozu@${INSTANCE_NAME} -- \
    sudo nsenter -n -t '$(sudo /root/go/bin/pmctl pod show operation | jq .pid)' ssh -F ssh_config \
     ${host} journalctl -f -u neco-worker.service
}

tail_neco_worker() {
  host="$1"

  while true; do
    tail_neco_worker_once $host || continue
    sleep 3
  done
}

tail_neco_worker boot-0 &
tail_neco_worker boot-1 &
tail_neco_worker boot-2 &
tail_neco_worker boot-3 &

wait
