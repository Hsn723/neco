#!/bin/sh -e

if [ $# -ne 2 ]; then
    echo "Usage: load-docker-image URL TAG"
    exit 1
fi

img="$1"
tag="$2"
filename=/tmp/$(basename "$img")

if docker image inspect "$tag" >/dev/null 2>&1; then
    exit 0
fi

for i in $(seq 20); do
    if curl -sfSL -o "$filename" "$img"; then
        break
    fi
    rm -f "$filename"
    sleep 5
done

docker load -i "$filename"
